<% 

    textAreaHelper = (label, name, data ) => {
        return `
                <label for="form[${name}]" class="col-sm-2 col-form-label text-sm-right">${label}</label>
                <div class="col-xs-12 col-sm-8">
                    <textarea name="${name}" id="${name}" cols="30" rows="10" placeholder="Enter content here...">${(data ===undefined) ? "" : data} </textarea>
                </div>  
        `;
    }

%> 
