
<%  
      
    const pageCategory           =    "category";
    const pageArticles           =    "articles";
    const pageManager            =    "manager";
    const pagePostManager        =    "post-manager";
    const linkPrefixCategory     = `${systemConfig.prefix_admin}/${pagePostManager}/${pageCategory}/`;
    const linkPrefixArticles     = `${systemConfig.prefix_admin}/${pagePostManager}/${pageArticles}/`;
    const linkPrefixManager      = `${systemConfig.prefix_admin}/${pageManager}/`;
   
%> 

<aside class="main-sidebar sidebar-dark-info elevation-4">
    <!-- Brand Logo -->
    <a href="<%= systemConfig.prefix_admin %>/dashboard" class="brand-link" >
        <img src="backend/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Nodejs-Nam</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="backend/images/default-user.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="<%= systemConfig.prefix_admin %>/dashboard" class="d-block" ><%= systemConfig.full_name %></a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item" style="margin-left: -7px;" id="dashboard">
                    <a href="<%= systemConfig.prefix_admin %>/dashboard"  class="nav-link " data-active="dashboard">
                        <i class="nav-icon fas fa-tachometer-alt" ></i>
                        &nbsp;<p>Dashboard</p>
                    </a>
                </li>
             
                <!-- Items -->
                <li class="nav-item " id="post-manager">
                    <a href="<%= linkPrefixCategory %>" class="nav-link" data-active="category">
                        <i class="fab fa-buromobelexperte" style="font-size: 16px"></i>
                            &nbsp; <p>Post manager</p> <i class="fas fa-angle-left right"></i>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item" id="category">
                            <a href="<%= linkPrefixCategory %>" class="nav-link ml-2" data-active="index" >
                                <i class="nav-icon fa fa-clipboard-list" style="font-size: 12px"></i>
                                <p>Category</p>
                            </a>
                        </li>

                    </ul>

                    <ul class="nav nav-treeview">
                        <li class="nav-item" id="articles">
                            <a href="<%= linkPrefixArticles %>" class="nav-link ml-2" data-active="index" >
                                <i class="nav-icon fas fa-list-ul" style="font-size: 12px"></i>
                                <p>Articles</p>
                            </a>
                        </li>

                    </ul>
                </li>

                <!-- Users Management -->
                <li class="nav-item " id="manager">
                    <a href="<%= linkPrefixManager %>groups" class="nav-link" data-active="category">
                        
                        <i class="fa fa-users text-white" style="font-size: 12px"></i>
                            &nbsp; <p>Manager</p> <i class="fas fa-angle-left right"></i>
                    </a>
                    <ul class="nav nav-treeview ">
                        <li class="nav-item " id="groups">
                            <a href="<%= linkPrefixManager %>groups" class="nav-link ml-2 " data-active="index" >
                                
                                <i class="fa fa-layer-group" style="font-size: 12px"></i>
                                &nbsp;<p>Groups</p>
                            </a>
                        </li>

                        <li class="nav-item" id="users">
                            <a href="<%= linkPrefixManager %>users" class="nav-link ml-2" data-active="form">
                                <i class="fa fa-user-tie" style="font-size: 12px"></i>
                                &nbsp;<p>Users</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>